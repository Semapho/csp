<lqfp:PinBase
    x:Class="CSP.Modules.Pages.MCU.Components.LQFP.PinLeft"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lqfp="clr-namespace:CSP.Modules.Pages.MCU.Components.LQFP"
    Width="500"
    Height="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Name="TextBlockNote"
            Grid.Column="0"
            Padding="0,0,10,0"
            VerticalAlignment="Center"
            x:FieldModifier="private"
            FontSize="20"
            Text="Note"
            TextAlignment="Right" />
        <Border
            Grid.Column="1"
            Margin="0,0.5"
            Background="Black">
            <Button
                x:Name="ButtonPin"
                Margin="1.5,1.5,-2,1.5"
                x:FieldModifier="private"
                Background="#b9c4ca"
                Click="OnPinNameClick"
                Content="Pin"
                Cursor="Hand"
                FontSize="14">
                <Button.ContextMenu>
                    <ContextMenu Name="ButtonPinContextMenu" />
                </Button.ContextMenu>
            </Button>
        </Border>
    </Grid>
</lqfp:PinBase>